<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="13dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/item_hot_gif_img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#11000000"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/item_hot_gif_img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#11000000"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/item_hot_gif_img3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#11000000"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     >
        <TextView
            android:id="@+id/item_new_gif_title"
            android:layout_centerVertical="true"
            android:text="EmojiBox表情包测试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_hot_gif_like_icon"
            android:id="@+id/item_new_gif_like_num"
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_button_good"
            android:text="@string/app_name"

            android:id="@+id/item_hot_gif_like_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            />

    </RelativeLayout>



</LinearLayout>